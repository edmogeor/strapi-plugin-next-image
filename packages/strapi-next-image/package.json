{
  "name": "strapi-next-image",
  "version": "0.1.0",
  "description": "A drop-in replacement for next/image that brings Next.js-style image optimization to any React app using Strapi v5.",
  "author": "edmogeor",
  "repository": {
    "type": "git",
    "url": "https://github.com/edmogeor/strapi-plugin-next-image.git",
    "directory": "packages/strapi-next-image"
  },
  "bugs": {
    "url": "https://github.com/edmogeor/strapi-plugin-next-image/issues"
  },
  "homepage": "https://github.com/edmogeor/strapi-plugin-next-image#readme",
  "keywords": [
    "strapi",
    "react",
    "next-image",
    "image-optimization"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "jsdom": "^28.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  }
}